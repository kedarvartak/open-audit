# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/open_audit?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="7d"

# Cloudinary (Image Storage - FREE TIER: 25GB storage + 25GB bandwidth/month)
# Sign up at: https://cloudinary.com/users/register_free
# Get credentials from: Dashboard > Account Details
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="123456789012345"
CLOUDINARY_API_SECRET="your-api-secret"

# Firebase (Push Notifications)
# Get these from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Redis (for BullMQ - optional)
REDIS_HOST="localhost"
REDIS_PORT="6379"

# Blockchain (Polygon Amoy Testnet - FREE)
# Get free MATIC from: https://faucet.polygon.technology/
# Deploy contract: cd packages/contracts && npx hardhat run scripts/deploy-task-escrow.ts --network amoy
BLOCKCHAIN_RPC_URL="https://rpc-amoy.polygon.technology"
BLOCKCHAIN_PRIVATE_KEY="0x_YOUR_WALLET_PRIVATE_KEY_HERE"
TASKESCROW_CONTRACT_ADDRESS="0x_DEPLOYED_CONTRACT_ADDRESS"

# AI Service
AI_SERVICE_URL="http://localhost:8003"

# App
PORT="3001"
NODE_ENV="development"
